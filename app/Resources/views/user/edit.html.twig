{% extends 'templates/singleform.html.twig' %}

{% block form_title %}Editar conta de usu√°rio{% endblock %}
{% block form_body %}
    {{ form_start(form) }}
    <div class="form_group">
        <div class="col-md-8 col-md-offset-2">
            {{ form_row(form.name, {'attr': {'class': 'form-control', 'autofocus': true}}) }}
        </div>
    </div>
    <div class="form_group">
        <div class="col-md-8 col-md-offset-2">
            {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    {% if is_granted('ROLE_ADMIN') %}
        <div class="form_group">
            <div class="col-md-8 col-md-offset-2">
                {{ form_row(form.role, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
    {% endif %}
    <div class="form_group">
        <div class="col-md-8 col-md-offset-2">
            {{ form_row(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form_group">
        <div class="col-md-8 col-md-offset-2">
            {{ form_row(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12" style="margin-top:25px;">
            <p class="text-center">
                <a href="{{ path('user_list')}}" class="btn btn-danger"><span class="fa fa-times"></span> Cancelar</a>
                <button type="submit" class="btn btn-success">
                    <span class="fa fa-save"></span> Salvar
                </button>
            </p>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
{% extends 'templates/singleform.html.twig' %}

{% block form_title %}Registrar nova conta{% endblock %}
{% block form_body %}
    {{ form_start(form) }}
    <div class="form_group">
        <div class="col-md-8 col-md-offset-2">
            {{ form_row(form.name, {'attr': {'class': 'form-control', 'autofocus': true}}) }}
        </div>
    </div>
    <div class="form_group">
        <div class="col-md-8 col-md-offset-2">
            {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form_group">
        <div class="col-md-8 col-md-offset-2">
            {{ form_row(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form_group">
        <div class="col-md-8 col-md-offset-2">
            {{ form_row(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12" style="margin-top:25px;">
            <p class="text-center">
                <a href="{{ path('auth_login')}}" class="btn btn-danger">Cancelar</a>
                <button type="submit" class="btn btn-primary">
                    <span class="fa fa-user"></span> Registrar
                </button>
            </p>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}